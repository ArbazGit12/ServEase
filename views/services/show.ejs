<% layout('/layouts/boilerplate') %>

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card shadow">
            <div class="card-body p-4">
                <div class="text-center mb-4">
                    <span style="font-size: 5rem;"><%= service.icon %></span>
                    <h2 class="mt-3"><%= service.name %></h2>
                    <span class="badge bg-primary"><%= service.category %></span>
                </div>
                
                <hr>
                
                <div class="service-details">
                    <h4>Service Description</h4>
                    <p class="lead"><%= service.description %></p>
                    
                    <div class="row mt-4">
                        <div class="col-md-4">
                            <div class="detail-box text-center p-3 bg-light rounded">
                                <i class="fas fa-rupee-sign fa-2x text-success mb-2"></i>
                                <h5>â‚¹<%= service.basePrice %></h5>
                                <p class="mb-0 text-muted">Base Price</p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="detail-box text-center p-3 bg-light rounded">
                                <i class="fas fa-clock fa-2x text-primary mb-2"></i>
                                <h5><%= service.duration %> mins</h5>
                                <p class="mb-0 text-muted">Duration</p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="detail-box text-center p-3 bg-light rounded">
                                <i class="fas fa-bolt fa-2x text-warning mb-2"></i>
                                <h5>15 mins</h5>
                                <p class="mb-0 text-muted">Arrival Time</p>
                            </div>
                        </div>
                    </div>
                    
                    <div class="alert alert-info mt-4">
                        <i class="fas fa-info-circle"></i>
                        <strong>Note:</strong> Our service provider will arrive at your location within 15 minutes of booking confirmation.
                    </div>
                    
                    <div class="mt-4">
                        <% if (currUser) { %>
                            <a href="/bookings/new/<%= service._id %>" class="btn btn-primary btn-lg w-100">
                                <i class="fas fa-calendar-check"></i> Book This Service Now
                            </a>
                        <% } else { %>
                            <a href="/login" class="btn btn-primary btn-lg w-100">
                                Login to Book
                            </a>
                        <% } %>
                        <a href="/services" class="btn btn-outline-secondary w-100 mt-2">
                            <i class="fas fa-arrow-left"></i> Back to Services
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
