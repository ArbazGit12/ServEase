<% layout('/layouts/boilerplate') %>

<div class="row">
    <div class="col-md-10 offset-md-1">
        <h2 class="mb-4"><i class="fas fa-history"></i> My Bookings</h2>
        
        <% if (bookings.length === 0) { %>
            <div class="text-center py-5">
                <i class="fas fa-calendar-times fa-4x text-muted mb-3"></i>
                <h4>No bookings yet</h4>
                <p class="text-muted">Start booking services to see your history here</p>
                <a href="/services" class="btn btn-primary mt-3">
                    <i class="fas fa-tools"></i> Browse Services
                </a>
            </div>
        <% } else { %>
            <div class="bookings-list">
                <% bookings.forEach(booking => { %>
                    <div class="card mb-3 shadow-sm">
                        <div class="card-body">
                            <div class="row align-items-center">
                                <!-- Service Icon & Name -->
                                <div class="col-md-3">
                                    <div class="d-flex align-items-center">
                                        <% if (booking.service) { %>
                                            <span style="font-size: 2.5rem;" class="me-3"><%= booking.service.icon %></span>
                                            <div>
                                                <h5 class="mb-0"><%= booking.service.name %></h5>
                                                <small class="text-muted"><%= booking.service.category %></small>
                                            </div>
                                        <% } else { %>
                                            <span style="font-size: 2.5rem;" class="me-3">ðŸ”§</span>
                                            <div>
                                                <h5 class="mb-0">Service Unavailable</h5>
                                                <small class="text-muted">Service removed</small>
                                            </div>
                                        <% } %>
                                    </div>
                                </div>
                                
                                <!-- Booking Info -->
                                <div class="col-md-3">
                                    <p class="mb-1">
                                        <i class="fas fa-hashtag text-primary"></i>
                                        <strong><%= booking.bookingId %></strong>
                                    </p>
                                    <p class="mb-0 text-muted">
                                        <i class="fas fa-calendar"></i>
                                        <%= new Date(booking.scheduledDate).toLocaleDateString('en-IN') %>
                                    </p>
                                    <p class="mb-0 text-muted">
                                        <i class="fas fa-clock"></i>
                                        <%= booking.scheduledTime %>
                                    </p>
                                </div>
                                
                                <!-- Status & Price -->
                                <div class="col-md-3">
                                    <% 
                                        let statusClass = '';
                                        switch(booking.status) {
                                            case 'Confirmed':
                                                statusClass = 'success';
                                                break;
                                            case 'In Progress':
                                                statusClass = 'warning';
                                                break;
                                            case 'Completed':
                                                statusClass = 'info';
                                                break;
                                            case 'Cancelled':
                                                statusClass = 'danger';
                                                break;
                                            default:
                                                statusClass = 'secondary';
                                        }
                                    %>
                                    <span class="badge bg-<%= statusClass %> mb-2">
                                        <%= booking.status %>
                                    </span>
                                    <p class="mb-0">
                                        <strong class="text-success">â‚¹<%= booking.totalPrice %></strong>
                                    </p>
                                    <% if (booking.estimatedArrivalTime) { %>
                                        <p class="mb-0 text-muted small">
                                            <i class="fas fa-bolt"></i> ETA: <%= booking.estimatedArrivalTime %>
                                        </p>
                                    <% } %>
                                </div>
                                
                                <!-- Actions -->
                                <div class="col-md-3 text-end">
                                    <a href="/bookings/<%= booking._id %>" class="btn btn-sm btn-outline-primary">
                                        <i class="fas fa-eye"></i> View Details
                                    </a>
                                    
                                    <% if (booking.status === 'Completed' && !booking.rating) { %>
                                        <a href="/bookings/<%= booking._id %>" class="btn btn-sm btn-warning mt-1">
                                            <i class="fas fa-star"></i> Rate
                                        </a>
                                    <% } %>
                                    
                                    <% if (booking.rating) { %>
                                        <div class="mt-2">
                                            <% for(let i = 1; i <= 5; i++) { %>
                                                <i class="fas fa-star <%= i <= booking.rating ? 'text-warning' : 'text-muted' %>"></i>
                                            <% } %>
                                        </div>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        <% } %>
    </div>
</div>
