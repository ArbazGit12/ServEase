<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ServEase - Instant Service Booking</title>
    
    <!-- Favicons - Rounded Corners (White Background Logo) -->
    <link rel="icon" type="image/x-icon" href="/assets/favicon.ico?v=3">
    <link rel="icon" type="image/png" sizes="16x16" href="/assets/favicon-16x16.png?v=3">
    <link rel="icon" type="image/png" sizes="32x32" href="/assets/favicon-32x32.png?v=3">
    <link rel="icon" type="image/png" sizes="48x48" href="/assets/favicon-48x48.png?v=3">
    <link rel="icon" type="image/png" sizes="192x192" href="/assets/favicon-192x192.png?v=3">
    <link rel="apple-touch-icon" sizes="180x180" href="/assets/apple-touch-icon.png?v=3">
    
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/chatbot.css">
</head>
<body>
    <%- include('../includes/navbar.ejs') %>
    
    <%- include('../includes/flash.ejs') %>
    
    <main class="container my-4">
        <%- body %>
    </main>
    
    <%- include('../includes/footer.ejs') %>
    
    <!-- Chatbot Widget -->
    <div class="chatbot-container">
        <button class="chatbot-toggle" id="chatbotToggle" title="Chat with ServEase Bot (Ctrl+K)">
            <i class="fas fa-comment-dots"></i>
        </button>
        
        <div class="chatbot-panel" id="chatbotPanel">
            <div class="chatbot-header">
                <h5><i class="fas fa-robot"></i> ServEase Bot</h5>
                <button class="chatbot-close" id="chatbotClose" title="Close chat">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            
            <div class="chatbot-messages" id="chatbotMessages">
                <!-- Typing Indicator -->
                <div class="typing-indicator" id="typingIndicator">
                    <div class="message bot">
                        <div class="message-avatar">ðŸ¤–</div>
                        <div class="message-content">
                            <div class="typing-dots">
                                <span></span>
                                <span></span>
                                <span></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="chatbot-input">
                <div class="input-group">
                    <input 
                        type="text" 
                        id="chatbotInput" 
                        placeholder="Type a message... (e.g., 'book cleaning')" 
                        autocomplete="off"
                        maxlength="200"
                    >
                    <button class="chatbot-send" id="chatbotSend" title="Send message">
                        <i class="fas fa-paper-plane"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- Custom JS -->
    <script src="/js/script.js"></script>
    <script src="/js/chatbot.js"></script>
    
    <!-- Admin Badge Update Script -->
    <% if (currUser && currUser.role === 'admin') { %>
    <script>
    // Update pending badge count for admin
    async function updatePendingBadge() {
        try {
            const response = await fetch('/admin/api/pending-count');
            const data = await response.json();
            const badge = document.getElementById('pendingBadge');
            if (data.success && data.count > 0) {
                badge.textContent = data.count;
                badge.style.display = 'inline-block';
            } else {
                badge.style.display = 'none';
            }
        } catch (err) {
            console.error('Failed to update badge:', err);
        }
    }
    
    // Update on page load and every 30 seconds
    if (document.getElementById('pendingBadge')) {
        updatePendingBadge();
        setInterval(updatePendingBadge, 30000);
    }
    </script>
    <% } %>
</body>
</html>
